<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/header_padding">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/search_back_btn"
        style="@style/ToolbarStyle"
        app:title="@string/search"
        app:navigationIcon="@drawable/arrow_back"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_height" >

        <EditText
            android:id="@+id/search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:hint="@string/search"
            android:textColorHint="@color/black"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="@color/black"
            android:lines="1"
            android:background="?attr/background"
            android:paddingLeft="@dimen/search_padding"
            android:paddingRight="@dimen/search_padding"
            android:imeOptions="actionDone"
            android:singleLine="true"
            />
        <ImageView
            android:id="@+id/searchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/search"/>

        <ImageView
            android:id="@+id/removeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/remove"
            android:visibility="gone"/>
    </FrameLayout>
    <ProgressBar android:id="@+id/progressBar"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="148dp"
        android:layout_gravity="center"
        android:indeterminateTint="@color/background_blue"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/history_search_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/search_text"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="19sp"
        android:fontFamily="@font/ys_display_bold"
        android:layout_gravity="center"
        android:visibility="gone"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/track"
        tools:itemCount="10"
        android:visibility="gone"
        android:layout_weight="1"/>
    <LinearLayout
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">
        <ImageView
            android:id="@+id/status_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/nodatafound"/>
        <TextView
            android:id="@+id/status_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/connect_err"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="19sp"
            android:fontFamily="@font/ys_display_bold"/>
        <TextView
            android:id="@+id/status_add_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/connect_descr"
            android:textColor="?attr/colorOnPrimary"
            android:gravity="center"
            android:textSize="19sp"
            android:fontFamily="@font/ys_display_bold"/>
        <Button
            android:id="@+id/reload_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/reload"
            app:cornerRadius="54dp"
            android:backgroundTint="?attr/colorOnPrimary"
            android:textColor="?attr/colorPrimaryVariant"
            android:textAllCaps="false"
            android:fontFamily="@font/ys_display_regular"/>
    </LinearLayout>
    <Button
        android:id="@+id/clear_history_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/clear_history"
        app:cornerRadius="54dp"
        android:backgroundTint="?attr/colorOnPrimary"
        android:textColor="?attr/colorPrimaryVariant"
        android:textAllCaps="false"
        android:fontFamily="@font/ys_display_medium"
        android:layout_gravity="center"
        android:visibility="gone"/>
</LinearLayout>