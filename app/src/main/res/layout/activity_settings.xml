<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_white"
    android:fontFamily="@string/app_font_family"
    android:padding="@dimen/header_padding">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/settings_back_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/settings"
        app:titleTextColor="@color/text_color"
        app:navigationIcon="@drawable/arrow_back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/content_margin">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_layout_width">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:text="@string/black_theme"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size"
                android:gravity="center" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_layout_width">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:text="@string/share"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size"
                android:gravity="center"/>

            <ImageView
                android:layout_width="@dimen/share_icon_width"
                android:layout_height="match_parent"
                android:src="@drawable/share"
                android:layout_gravity="end" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_layout_width">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:text="@string/support"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size"
                android:gravity="center"/>

            <FrameLayout
                android:layout_width="@dimen/icon_width"
                android:layout_height="match_parent"
                android:layout_gravity="end">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/icon_height"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/support_handsfree"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/support_hair"
                        android:paddingLeft="4dp"
                        android:paddingTop="3dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/support_eye1"
                        android:paddingLeft="6dp"
                        android:paddingTop="9dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/support_eye2"
                        android:paddingLeft="12dp"
                        android:paddingTop="9dp"/>
                </FrameLayout>

            </FrameLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_layout_width">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:text="@string/user_agreement"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size"
                android:gravity="center"/>

            <FrameLayout
                android:layout_width="@dimen/icon_width"
                android:layout_height="match_parent"
                android:layout_gravity="end">

                <ImageView
                    android:layout_width="@dimen/ua_icon_width"
                    android:layout_height="match_parent"
                    android:src="@drawable/arrow_forward"
                    android:layout_gravity="center" />
            </FrameLayout>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>