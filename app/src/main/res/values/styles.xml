<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainBtnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/icon_color</item>
        <item name="android:textSize">@dimen/content_caption_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="SettingsMenuFrameStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/menu_layout_width</item>
    </style>
    <style name="SettingsMenuTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="SettingsMenuImgStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
    </style>
    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="titleTextColor">@color/text_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
</resources>