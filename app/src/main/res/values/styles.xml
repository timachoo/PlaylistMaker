<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainBtnStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">?attr/colorSecondaryVariant</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textSize">@dimen/content_caption_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="SettingsMenuTextStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/enable_thumb</item>
        <item name="colorSwitchThumbNormal">@color/disable_thumb</item>
        <item name="android:colorForeground">@color/thumb_foreground</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="AddFont">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">11sp</item>
        <item name="android:tint">@color/gray</item>
    </style>
    <style name="PlayerTextFont">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="PlayerValFont" parent="@style/PlayerTextFont">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="BackgroundColor">
        <item name="android:background">@color/white</item>
    </style>
</resources>